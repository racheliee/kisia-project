{
  "manifest_version": 3,
  "name": "URLs url checker",
  "version": "1.0",
  "description": "Right-click to send the current URL to a server.",
  "permissions": ["contextMenus", "tabs", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
